<div class="container-fluid">
<div class="container">
<div class="mx-auto mt-5" style="max-width: 1200px;">
<div class="container-fluid search-container">
<form class="d-flex" role="search">
    <div class="input-group">
        <input class="form-control form-control-sm me-2" id="searchInput" type="search" placeholder="Search..." aria-label="Search">
        <i class="material-icons">search</i>
    </div>
<button class="btn btn-outline-success btn-sm mb-2" id="addDocumentButton" type="button" data-bs-toggle="modal" data-bs-target="#addDocumentModal">Add Document</button>
</form>
</div>
<div id="documents-list" class="display documents-list"></div>
<!-- Modal -->
<div class="modal fade mt-md-5 " id="addDocumentModal" tabindex="-1" aria-labelledby="addDocumentModalLabel" aria-hidden="true">
<div class="modal-dialog  ">
<div class="modal-content">
<div class="modal-header">
<h5 class="modal-title" id="addDocumentModalLabel">Add Document</h5>
<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
<form id="addDocumentForm" action="/upload" method="post" enctype="multipart/form-data">
